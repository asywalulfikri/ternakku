<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="#8BC34A"
    android:layout_height="fill_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">


        <ImageView android:src="@drawable/ternakku_logo"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp">

        <!--  Name Label -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:gravity="center"
            android:layout_marginBottom="1dp">

            <EditText android:id="@+id/usernamelogin"
                android:layout_width="220dp"
                android:background="@drawable/edittext_top_bg"
                android:layout_height="40dp"
                android:textSize="15dp"
                android:drawableLeft="@drawable/user"
                android:inputType="number"
                android:hint="Nama pengguna"/>

        </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">


            <!-- Password Label -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/ti_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="8dp">


                <EditText android:id="@+id/passwordlogin"
                    android:layout_width="220dp"
                    android:background="@drawable/edittext_down_bg"
                    android:layout_height="40dp"
                    android:textSize="15dp"
                    android:drawableLeft="@drawable/pass"
                    android:inputType="textPassword"
                    android:hint="Password"/>
            </android.support.design.widget.TextInputLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

        <CheckBox
            android:id="@+id/cbShowPassword_reg1"
            android:layout_width="30dp"
            android:layout_marginLeft="30dp"
            android:layout_height="30dp"
            android:button="@drawable/checkbox_showpassword"
            android:textColor="@color/white"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

        <android.support.v7.widget.AppCompatButton
                android:layout_width="220dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:id="@+id/btnLogin"

                android:background="@drawable/btn_login_shape"
                android:onClick="loginToVillages"
                android:textColor="@color/white"
                android:padding="12dp"
                android:text="MASUK"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>



        <!-- Signup Button -->



    </LinearLayout>
</LinearLayout>