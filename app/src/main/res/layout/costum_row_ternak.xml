<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/back"
        android:tag="back"
        style="@style/MyListBackContent"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/swipe_button1"
            style="@style/MyListButtonAction"
            android:src="@drawable/composer_camera"
            android:text="Update Foto"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/swipe_button2"
            style="@style/MyListButtonAction"
            android:src="@drawable/komposer_imun"
            android:text="Imunisasi"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/swipe_button3"
            style="@style/MyListButtonAction"
            android:src="@drawable/composer_berat"
            android:text="Update Berat"/>

    </LinearLayout>
    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/front"
        android:tag="front"
        style="@style/MyListFrontContent">

        <com.example.toshiba.ternakku.ui.widget.Rounded
            style="@style/MyListImage"
            android:background="@drawable/noimage"
            android:id="@+id/example_image"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/example_image"
            style="@style/MyListTitle"
            android:id="@+id/example_itemname"/>


    </RelativeLayout>

</FrameLayout>